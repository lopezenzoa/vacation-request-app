<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

    <body>
        <section id="head" class="text-center mt-3">
            <div class="d-block mb-3">
                <a class="btn btn-outline-primary btn-sm" href="/">Home</a>
            </div>
            <img src="/assets/profile.jpg" class="img rounded" width="135px" alt="Profile">
            <h5 class="mt-3 mb-3">
                <%= profileInfo.name %>
            </h5>
            <h6>Last vacations: <span class="ms-2">
                    <%= profileInfo.lastVacations %>
                </span>
            </h6>
        </section>
        <section id="content" class="container mt-5 mb-5">
            <ul class="list-group list-group-flush">
                <% Object.entries(profileInfo).forEach(function (item) { %>
                    <% if (item[0] !=="lastVacations" ) { %>
                        <li class="list-group-item">
                            <span class="mr-3"><strong class="me-2">
                                    <%= capitalize(item[0]) %>:
                                </strong>
                                <%= item[1] %>
                            </span>
                        </li>
                        <% }}) %>
            </ul>
        </section>
    </body>

</html>