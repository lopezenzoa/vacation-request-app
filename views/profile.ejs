<!DOCTYPE html>
<html lang="en">

<%- include("./partials/head.ejs") %>

    <body>
        <% if (auth) { %>
            <section id="head" class="text-center mt-3">
                <div class="d-block mb-5">
                    <a class="btn btn-outline-primary btn-sm" href="/">Home</a>
                </div>
                <img src="/assets/profile.jpg" class="img rounded-circle" width="135px" alt="Profile">
                <h5 class="mt-3 mb-3">
                    <%= profileInfo.name %>
                </h5>
            </section>
            <section id="content" class="container mt-5 mb-5">
                <ul class="list-group list-group-flush">
                    <% Object.entries(profileInfo).forEach(function (item) { %>
                        <li class="list-group-item">
                            <span class="mr-3"><strong class="me-2">
                                    <%= capitalize(item[0]) %>:
                                </strong>
                                <%= item[1] %>
                            </span>
                        </li>
                        <% }) %>
                </ul>
            </section>
            <% } else { %>
                <div class="container mt-5 mb-5">
                    <div class="alert alert-primary w-50" role="alert">
                        Please login to access to your profile
                    </div>
                    <a href="/login" class="btn btn-outline-primary btn-sm">Login</a>
                </div>
                <% } %>
    </body>

</html>